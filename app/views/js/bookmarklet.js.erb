(function (){

	initMyBookmarklet();
	
	function initMyBookmarklet() {
		(window.myBookmarklet = function() {
			
				function get_amazon_product_info() 
			 	{
			 		var title_span = document.getElementById("btAsinTitle");
			 		var title = title_span.innerText;
			 		var image_tag = document.getElementById("main-image");
			 		var image = image_tag.getAttribute("src");
			 		var price_span = document.getElementById("actualPriceValue");
			 		var price_with_dollar = price_span.innerText;
			 		var price = strip_dollar(price_with_dollar);
			 		var link_url = document.URL;
			 		var product_info = {
			 			title: title,
			 			image: image,
			 			price: price,
			 			link_url: link_url
			 		};
			 		if (product_info)
				 		{
				 			console.log(product_info);
				 			return product_info;
				 		}
				 	else
				 		{
				 			alert("Something went wrong!");
				 		}
		 		}

			 	function get_etsy_product_info()
			 	{

						var title_span = document.getElementById("listing-page-cart-inner").getElementsByTagName("span");
                                                var title = title_span[0].innerText;
				 		var image_div = document.getElementById("image-0");
						var image_tag = image_div.getElementsByTagName("img");
						var image = image_tag[0].getAttribute("src");
						var price_span = document.getElementById("listing-page-cart-inner").getElementsByClassName("currency-value");
						var price = price_span[0].innerText;
				 		var link_url = document.URL;
						var product_info = {
							title: title,
							image: image,
							price: price,
							link_url: link_url
						};
				 		if (product_info)
				 		{
				 			console.log(product_info);
				 			return product_info;
				 		}
				 		else
				 		{
				 	      		alert("Something went wrong!");
				 		}
			 	}

			 	function get_jcrew_product_info()
			 	{
			  		        var title_span = document.getElementById("productDetailsContainer");
				 		var title = title_span.getElementsByTagName("h1")[0].innerText;
						var image_div = document.getElementById("subContainer");
				 		var image_tag = image_div.getElementsByTagName("img");
				 		var image = image_tag[0].getAttribute("src");
				 		var price_div = document.getElementById("productDetailsContainer");
						var price_span = price_div.getElementsByClassName("full-price");
					 	var price_with_dollar = price_span[0].innerText;
					 	var price_with_possible_space = strip_dollar(price_with_dollar);				
						var price = strip_space(price_with_possible_space);
				 		var link_url = document.URL;
						var product_info = {
							title: title,
							image: image,
							price: price,
							link_url: link_url
						};
				 		if (product_info.title = title)
				 		{
				 			return product_info;
				 		}
				 		else
				 		{
				 			console.log("No product_info object");
				 			alert("Something went wrong!");
				 			}
			 	}

			 	function determine_params() 
				{
				 		switch (document.domain) {
					 		case "www.amazon.com":
					 			var amazon = get_amazon_product_info();
					 			return amazon;
					 			break;
					 		case "www.etsy.com":
								var etsy = get_etsy_product_info();
								return etsy;
								break;
					 		case "www.jcrew.com":
					 			var jcrew = get_jcrew_product_info();
					 			return jcrew;
					 			break;
					 		default:
					 			alert("This is not a supported page!");
				 		}
				}	

				function send_data(product_info)
				{
					var domain = 'http://localhost:3000/add_wishlistitem?';
					var url = domain + "title=" + encodeURIComponent(product_info.title) + "&image=" + encodeURIComponent(product_info.image) + "&price=" + encodeURIComponent(product_info.price) + "&link_url=" + encodeURIComponent(product_info.link_url);
					
					var script = document.createElement('script'); 
					script.setAttribute('language','javascript'); 
					script.setAttribute('src', url); 
					document.body.appendChild(script);
				}

				function strip_dollar(string)
				{
					var stripped = "";
					for ( var i = 0; i < string.length; i++ )
					{
						if (string.charAt(i) != "$")
						{
							stripped += string.charAt(i);
						}
					};
					return stripped
				}

				function strip_space(string)
                                {
                                        var stripped = "";
                                        for ( var i = 0; i < string.length; i++ )
                                        {
                                                if (string.charAt(i) != " ")
                                                {
                                                        stripped += string.charAt(i);
                                                }
						else
						{
							return stripped
						}
                                        };
                                        return stripped
                                }  
				var product_info = determine_params();
				send_data(product_info);
		})();
	}

})();
